@using Isp.Laboratorios.Infrastructure
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/javascript")
    @Styles.Render("~/bundles/css")
</head>
<body>
    <div class="container box-shadow--6dp">
        <div id="header">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <img src="~/Content/Img/logo.png" alt="ISP">
                    </div>
                    <h2>&nbsp;&nbsp;@ApplicationInfo.NombreSistema</h2>
                </div>
            </nav>
        </div>
        @{ Html.RenderPartial("_Alerts"); }
        @RenderBody()

    </div>
    <footer>
        <div class="container">
            <p class="text-muted">
                <img src="~/Content/Img/logo-pie.png" alt="ISP" />
                &nbsp;&nbsp;© @DateTime.Now.Year - Instituto de Salud Pública de Chile, ISPCH.
            </p>
        </div>
    </footer>
</body>
</html>
